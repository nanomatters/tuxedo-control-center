{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-tccd-ng",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "UCC: Build",
            "type": "shell",
            "command": "./build-local.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/src/ucc"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "UCC: Install",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--install",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/ucc/build"
            },
            "dependsOn": "UCC: Build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "UCC: Run GUI",
            "type": "shell",
            "command": "./run-ucc-gui.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/src/ucc"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "UCC: Build, Install & Run",
            "dependsOn": [
                "UCC: Install",
                "UCC: Run GUI"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
